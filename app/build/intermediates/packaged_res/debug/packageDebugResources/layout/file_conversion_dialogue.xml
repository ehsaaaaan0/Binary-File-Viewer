<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_265sdp"
    android:layout_gravity="center"
    android:background="#00000000">

    <androidx.cardview.widget.CardView
        android:id="@+id/mainCV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_265sdp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="@dimen/_7sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/convert"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="19sp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Black_textview_big"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginStart="@dimen/_9sdp"
                android:text="@string/rename"
                />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/nameEdt"
                style="@style/Black_textview_smal"
                android:layout_marginTop="@dimen/_9sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_9sdp"
                android:background="@android:color/transparent"
                android:hint="@string/entername"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="@dimen/_12sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginHorizontal="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="#817F7F" />

            <TextView
                style="@style/Black_textview_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/format" />

            <RadioGroup
                android:id="@+id/textRadio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                >

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >
                    <RadioButton
                        android:id="@+id/hexa_check"
                        style="@style/Black_textview_smal"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/Primarydark"
                        android:checked="true"
                        android:text="Hexadecimal" />

                    <RadioButton
                        android:id="@+id/bin_check"
                        style="@style/Black_textview_smal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/Primarydark"
                        android:text="Binary" />

                </androidx.appcompat.widget.LinearLayoutCompat>


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <RadioButton
                        android:id="@+id/dec_check"
                        style="@style/Black_textview_smal"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/Primarydark"
                        android:text="Decimal" />

                    <RadioButton
                        android:id="@+id/octal_check"
                        style="@style/Black_textview_smal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/Primarydark"
                        android:text="Octal" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="@dimen/_7sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:layout_marginBottom="@dimen/_9sdp"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cancelbtn"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        app:cardBackgroundColor="@color/bg"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_1sdp">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/Black_textview_smal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/cancel"

                            android:textColor="@color/white" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/mconvertbtn"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_toEndOf="@+id/cancelbtn"
                        app:cardBackgroundColor="@color/button_type_layout"
                        app:cardCornerRadius="@dimen/_5sdp"
                        app:cardElevation="@dimen/_1sdp">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/Black_textview_smal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Convert"
                            android:textColor="@color/white" />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>
            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>
</RelativeLayout>