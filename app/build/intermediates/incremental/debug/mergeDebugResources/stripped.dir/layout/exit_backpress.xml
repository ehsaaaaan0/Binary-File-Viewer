<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_270sdp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/transparent">

<!--  <FrameLayout-->
<!--      android:id="@+id/mrec_container"-->
<!--      android:layout_width="match_parent"-->
<!--      android:layout_height="@dimen/_200sdp"-->
<!--      android:layout_gravity="center" />-->


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/transparent"
        app:cardCornerRadius="@dimen/_12sdp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:scaleType="fitXY"
                android:id="@+id/topImage"
                android:src="@drawable/exit_dialog_top" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cross"
                android:id="@+id/cross"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_10sdp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topImage"
                android:background="@color/white"
                android:paddingBottom="@dimen/_20sdp">

            <TextView
                android:id="@+id/enjoy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/roboto_bold"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:text="Enjoy Our App"
                android:textColor="@color/black"
                android:textSize="@dimen/_18sdp" />

            <TextView
                android:id="@+id/rate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/enjoy"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="We tried to make this app helpful and easy to use. Please select how you feel"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/stars"
                android:padding="@dimen/_10sdp"
                android:id="@+id/starts"
                android:layout_below="@id/rate_tv"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/rate_us"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_35sdp"
                app:cardBackgroundColor="@color/bg"
                android:layout_below="@+id/starts"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_30sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Rate us"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/exit"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="@dimen/_35sdp"
                app:cardBackgroundColor="#e3e3e3"
                android:layout_below="@+id/starts"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_30sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Exit"
                    android:textColor="@color/bg"
                    android:textSize="@dimen/_12sdp" />

            </androidx.cardview.widget.CardView>

            </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>