<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="toolbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="cart" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">@dimen/_90sdp</item>
        <item name="android:layout_marginStart">@dimen/_7sdp</item>
        <item name="android:layout_marginEnd">@dimen/_7sdp</item>
        <item name="android:layout_height">@dimen/_90sdp</item>
        <item name="cardCornerRadius">@dimen/_5sdp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardElevation">@dimen/_4sdp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="cart2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:layout_width">@dimen/_65sdp</item>
        <item name="android:layout_marginStart">@dimen/_7sdp</item>
        <item name="android:layout_marginEnd">@dimen/_7sdp</item>
        <item name="android:layout_marginTop">@dimen/_2sdp</item>
        <item name="android:layout_marginBottom">@dimen/_2sdp</item>
        <item name="android:layout_height">@dimen/_67sdp</item>
        <item name="cardCornerRadius">@dimen/_5sdp</item>
        <item name="cardBackgroundColor">
            @color/white
        </item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardElevation">@dimen/_4sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Black_textview_big" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Black_textview_smal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="MySpinner" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

</resources>